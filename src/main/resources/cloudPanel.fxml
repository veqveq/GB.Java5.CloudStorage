<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Client.PanelController" spacing="5">
    <padding>
        <Insets bottom="5.0" left="2.5" right="5.0" top="5.0"/>
    </padding>
    <Label fx:id="panelName" alignment="CENTER" maxWidth="Infinity" text="Облако" textAlignment="CENTER"
           VBox.vgrow="ALWAYS">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    <HBox>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS"/>
        <Button focusTraversable="false" text="Вверх" onAction="#btnUpperKey"/>
    </HBox>
    <TableView fx:id="clientFiles" VBox.vgrow="ALWAYS"/>
    <HBox>
        <Button text="Новый каталог" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false"
                onAction="#btnNew"/>
        <Button text="Копировать" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false" onAction="#btnCopy"/>
        <Button text="Переместить" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false"
                onAction="#btnMove"/>
        <Button text="Переименовать" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false"
                onAction="#btnRename"/>
        <Button text="Удалить" maxWidth="Infinity" HBox.hgrow="ALWAYS" focusTraversable="false" onAction="#btnDelete"/>
    </HBox>
</VBox>
